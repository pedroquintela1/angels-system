# Database
# Para desenvolvimento (SQLite)
DATABASE_URL="file:./dev.db"

# Para produção (PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/angels_system?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# JWT
JWT_SECRET="your-jwt-secret-here"

# Email (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@angelssystem.com"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# Payment Gateways
# Stripe
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# PagSeguro
PAGSEGURO_EMAIL="your-pagseguro-email"
PAGSEGURO_TOKEN="your-pagseguro-token"
PAGSEGURO_SANDBOX="true"

# Redis
REDIS_URL="redis://localhost:6379"

# File Upload
UPLOAD_MAX_SIZE="10485760" # 10MB
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,doc,docx"

# App Configuration
APP_NAME="Angels System"
APP_URL="http://localhost:3000"
SUPPORT_EMAIL="support@angelssystem.com"

# Security
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="86400" # 24 hours in seconds

# Development
NODE_ENV="development"
LOG_LEVEL="debug"
